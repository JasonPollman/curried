{
  "env": {
    "node": true,
    "jest": true,
    "browser": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "prefer-const": 0,
    "one-var-declaration-per-line": 0,
    "no-bitwise": 0,
    "one-var": 0,
    "no-plusplus": 0,
    "function-paren-newline": 0,
    "valid-jsdoc": 1,
    "require-jsdoc": [1,
      {
        "require": {
          "FunctionDeclaration": true,
          "ClassDeclaration": true,
          "MethodDefinition": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
        }
      }
    ]
  }
}